<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.rxjavademo.designmode.DesignModeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设计模式之代理模式"
        android:gravity="center_vertical"
        android:background="@color/text_white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设计模式之工厂模式"
        android:gravity="center_vertical"
        android:background="@color/text_white"
        android:layout_marginTop="@dimen/activity_dimens_ten"
        />
    <TextView
        android:id="@+id/text_one_design"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设计模式之建造者（Builder）模式"
        android:gravity="center_vertical"
        android:background="@color/text_white"
        android:layout_marginTop="@dimen/activity_dimens_ten"
        />
    <TextView
        android:id="@+id/text_singleInstance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设计模式之单例（singleInstance）模式(具体见BaseProject的utils)"
        android:gravity="center_vertical"
        android:background="@color/text_white"
        android:layout_marginTop="@dimen/activity_dimens_ten"
        />
    <TextView
        android:id="@+id/text_one_reflection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Java之反射（Reflection）机制"
        android:gravity="center_vertical"
        android:background="@color/text_white"
        android:layout_marginTop="@dimen/activity_dimens_ten"
        />

</LinearLayout>
